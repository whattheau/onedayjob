<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:text="txt_id"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/image1"
                android:layout_width="366dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:text="txt4"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:text="txt2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="328dp"
                android:layout_height="80dp"
                android:layout_below="@+id/image1"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="2"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="2"
                    android:maxLines="3"
                    android:text="Detail"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="328dp"
                android:layout_height="26dp"
                android:layout_alignStart="@+id/relativeLayout3"
                android:layout_below="@+id/relativeLayout3"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/txtDate"
                    android:background="@drawable/clock"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/clock" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:layout_weight="2"
                    android:text="Time"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/txtPrice"
                    android:layout_toStartOf="@+id/txtPrice"
                    android:background="@drawable/baht"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/baht" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="2"
                    android:text="Price"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"

                    android:layout_marginBottom="3dp"
                    android:background="@drawable/calendar"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/calendar" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtPrice"
                    android:layout_alignBottom="@+id/txtPrice"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_weight="2"
                    android:text="Date"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
